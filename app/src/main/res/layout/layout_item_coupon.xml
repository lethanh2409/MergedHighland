<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="16dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/lightGrey">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_coupon"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:src="@drawable/img_highlands"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    android:textSize="16sp"
                    android:text="Giảm 20.000 đ" />
                <TextView
                    android:id="@+id/tv_minium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/TextGreyColor"
                    android:text="Đơn tối thiểu 40.000 đ" />
                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:textSize="10sp"
                        android:textStyle="italic"
                        android:textColor="@color/black"
                        android:text="Hạn sử dụng: 08-04-2024 - 10-04-2024" />
                <TextView
                    android:id="@+id/tv_saveCoupon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_blue_dark"
                    android:text="Lưu"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>