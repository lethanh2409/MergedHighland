<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            app:srcCompat="@drawable/baseline_arrow_back_ios_24" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/ivBack"
            android:fontFamily="@font/sora_regular"
            android:gravity="center_vertical"
            android:text="Thêm sản phẩm mới"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivGallery"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/baseline_add_photo_alternate_24" />

        <Button
            android:id="@+id/btnSelectImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_button"
            android:padding="15sp"
            android:text="Tải ảnh lên"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spnCategoryOption"
                style="@style/SpinnerTheme"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/style_spinner_order_status"
                android:dropDownVerticalOffset="40dp"
                android:layout_gravity="center_vertical"
                android:paddingRight="10dp"
                android:layout_marginStart="10dp"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/swStatus"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/category_option"
                android:padding="10dp"
                android:text="Ngưng bán" />

        </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:hint="Tên sản phẩm"
                android:textColorHint="@color/smallTextColor"
                app:hintTextColor="@color/black"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="10dp"
                app:boxStrokeColor="@color/mainColor"
                android:backgroundTint="@color/mainColor"
                android:textCursorDrawable="@color/mainColor">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etProductName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:inputType="text"
                    android:padding="10dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:hint="Giá sản phẩm"
                app:hintTextColor="@color/black"
                android:textColorHint="@color/smallTextColor"
                android:layout_marginBottom="15dp"
                android:windowSoftInputMode="adjustPan"
                android:layout_marginHorizontal="10dp"
                app:boxStrokeColor="@color/mainColor"
                android:backgroundTint="@color/mainColor">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etProductPrice"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:inputType="numberDecimal"
                    android:padding="10dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:hint="Mô tả"
                app:hintTextColor="@color/black"
                android:textColorHint="@color/smallTextColor"
                android:layout_marginHorizontal="10dp"
                android:backgroundTint="@color/mainColor"
                app:boxStrokeColor="@color/mainColor">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:inputType="textMultiLine"
                    android:lines="5"
                    android:gravity="top"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/etDescription"
                    android:padding="10dp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="20dp"
        android:background="@drawable/rounded_button"
        android:padding="15dp"
        android:text="Thêm sản phẩm"
        android:textColor="@color/white" />
</LinearLayout>